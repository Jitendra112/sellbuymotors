     <script>
     $(document).on('submit','#image_upload' ,function(e) {
   
       e.preventDefault();
       if($('#agent-photo').val() == ''){
        
        toastr.error('Choose Image to Upload!!')
          return false;
       }else{
       var formData = new FormData(this);  
       // alert(formData);
        console.log(formData)                
        $.ajax({
        type:'POST',
        url:$(this).attr('action'),
        data:formData,
        cashe:false,
        contentType:false,
        processData:false,                      
        success:function(data){
           //   alert(data.message)
         //console.log(data);
         if(data.success == 1){
             get_images();
           toastr.success(data.message)
           $("#image_upload")[0].reset();
           $('#agent-file-name').css('display','none');
            
         
         }else{

           toastr.error(data.message)
           location.reload();

         }

      },
       
        },'json');
     }
     
});
get_images();
function get_images(){

 var id = $('#myid').val();
 //alert(id);
  var html = '';
  $.get('/profile_images?id='+ id ,function(res){
   
    $.each(res,function(key,val){
    	//alert(val.profile_image);
    	if(val.profile_image == null){

    		var image = 'user.jpg';
    	}else{ 
    		var image = val.profile_image
    	}
        html += '<img src="/ProfilePictures/'+ image + '" id="agent-profile-photo" class="img-responsive" alt="" >';
     
    })
      $('#grid').html(html)
  },'json')
}



</script>

